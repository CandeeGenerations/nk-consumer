{
  "compilerOptions": {
    "target": "es2021",
    "module": "node16",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "eslintrc.config.js"]
}
